# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $win+Escape restart
bindsym $win+Insert reload

# exit i3 (logs you out of your X session)
bindsym $win+Shift+Escape exec prompt-rofi "Exit i3?" "i3-msg exit"
bindsym $win+Shift+r exec prompt-rofi "Reboot?" "reboot"
bindsym $win+Shift+x exec prompt-rofi "Shutdown?" "shutdown 0"

